---
import FooterContact from "./FooterContact.astro";
import FooterGeneralNav from "./FooterGeneralNav.astro";
import Politicas from "../components/react/Politicas";
type Props = {};

const {} = Astro.props;
---

<div
  class="px-6 md:px-16 2xl:px-44 3xl:px-96 py-20 red-detail transition-all contenedor relative border-t border-red-600 text-[15px]"
>
  <div class="flex flex-col gap-10">
    <FooterContact />
    <FooterGeneralNav />
    <Politicas client:load />
  </div>
</div>

<style>
  .contenedor::before {
    content: "";
    background-image: url("/siicsa/images/contact_bg.png");
    background-size: 100% auto;
    background-repeat: no-repeat;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -3; /* Asegúrate de que esté detrás del contenido principal */
  }

  @media screen and (max-width: 600px) {
    .contenedor::before {
      content: "";
      background-image: url("/siicsa/images/contact_bg.png");
      background-size: auto 100%;
      background-repeat: no-repeat;
      background-position: center;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -3;
    }
  }

  .contenedor::after {
    content: "";
    background: linear-gradient(
      0deg,
      rgba(36, 36, 36, 1) 5%,
      rgba(36, 36, 36, 1) 30%,
      rgba(36, 36, 36, 0.5) 70%,
      rgba(36, 36, 36, 1) 100%
    );
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
  }
</style>
